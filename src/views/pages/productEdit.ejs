<%- include('../partials/head'); %>
<body>

    <header>
        <%- include('../partials/header'); %>
    </header>



    <section>
        <div id="createProduct" class="form">
            <form  action="edit?_method=PUT" autocomplete="on"  method="POST" enctype="multipart/form-data"> 
              <h1 class="titlePage">Editar Producto:  <%= elProducto.name %></h1> 
              <div class="form-group">
                <label for="" class="" >Nombre del producto </label>
                  <input id="name" name="name" class="form-control" required="required" type="text" value="<%= elProducto.name %>" />
              </div>

              <div class="form-group">
                <label for="" class="" > Descripción</label>
                <input id="description" name="description"  class="form-control" required="required" type="text" value="<%= elProducto.description %>"/> 
              </div>

           <!-- <div class="form-group">
                <label for="" class="" >Carga la imagen </label>
                <input id="image" name="image" class="form-control" required="required" type="file" placeholder="Imagen de producto" />
            </div>   -->


            <div class="form-group">
              <label for="" class="" >Precio </label>
              <input id="price" name="price" class="form-control" required="required" type="number" value="<%= elProducto.price %>" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Precio"/> 
            </div>

            <div class="form-group">
              <label for="" class="">Edad sugerida</label>
              <select id="age" name="age"  class="form-control" required="required" value="<%= elProducto.age %>">
                <option value="1 a 3 años">1 a 3 años</option>
                <option value="3 a 6 años">3 a 6 años</option>
                <option value="6 a 9 años">6 a 9 años</option>
                <option value="+9 años">+9 años</option>
              </select>

            </div>


            <div class="form-group">
              <label for="" class=""> Categoria</label>
               <select id="category" name="category"   class="form-control" required="required" value="<%= elProducto.category %>">
                <option value="Domino">Domino</option>
                <option value="Memotest">Memotest</option>
                <option value="Loteria">Lotería</option>
                <option value="Rompecabezas">Rompecabezas</option>
                <option value="KitHuerta">Kit huerta</option>
              </select>
            </div>

            <div class="form-group">
              <label for="" class=""> Descuento </label>
               <select id="discount" name="discount"   class="form-control" required="" value="Selecciona descuento">
                <option value="10% off">10% off</option>
                <option value="20% off">20% off</option>
                <option value="30% off">30% off</option>
                <option value="SALE 40% off">SALE 40% off</option>
                <option value="SALE 50% off">SALE 50% off</option>
              </select>
            </div>

            <div class="form-group">
            <button type="submit" class="btn btn-primary">Confirmar Cambios</button>
            </div>
            </form>

  
            <form action="edit?_method=DELETE" method="POST" >
              <div class="form-group">
              <button type="submit" class="btn btn-primary">Eliminar</button>
              </div>
            </form>

            <p>
               Ya eres miembro? 
                <a href="login" class="to_register"> Loguéate </a>
            </p>




        </div>
    </section>
    
    <footer>
        <%- include('../partials/footer'); %>
    </footer>

<%- include('../partials/closure'); %>